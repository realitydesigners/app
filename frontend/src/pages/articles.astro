---
import MainArticle from '../components/article/MainArticle.astro'
import LeftSidePosts from '../components/blog/LeftSidePosts.astro'
import MainPost from '../components/blog/MainPost.astro'
import RightSidePosts from '../components/blog/RightSidePosts.astro'
import Layout from '../layouts/Layout.astro'
import { getArticle } from '../lib/api.js'

const articles = await getArticle()
---

<Layout title="Reality Designers">
  <main
    class="flex flex-wrap w-screen h-auto justify-center bg-black pt-20 p-2 lg:p-12 lg:pt-28"
  >
    <MainArticle article={articles} />
  </main>
</Layout>
