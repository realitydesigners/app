---
import '@fontsource/rajdhani/400.css'
import '@fontsource/rajdhani/600.css'
import '@fontsource/rajdhani/700.css'
import { Image } from 'astro:assets'
import { getSanityImageURL } from '../../utils/helpers.js'

const { img } = Astro.props
---

<ul class="w-full h-auto grid grid-cols-1 p-2 space-y-4 flex-wrap">
  {
    img &&
      img.map((image: any) => (
        <div class="text-white flex flex-col relative w-full border border-gray-200 rounded-xl">
          <div class="flex relative w-full justify-end">
            <p class="tag tracking-wide uppercase mt-3 mr-3  absolute text-amber-200 w-auto p-[.2em] pl-2 pr-2 text-xs backdrop-blur-lg  rounded-2xl border border-amber-200 bg-pink-200/20 transition-all duration-300 ease-in hover:bg-amber-400 hover:border-amber-400 hover:text-white">
              Image
            </p>
          </div>

          {image?.image && (
            <Image
              src={getSanityImageURL(image?.image).url()}
              alt="this is an image"
              width={100}
              height={100}
              format="webp"
              class="w-full h-full rounded-xl object-cover"
            />
          )}

          {image?.team && (
            <div class=" absolute rounded-xl bottom-0 p-4 pb-3 flex h-auto w-full items-center bg-gradient-to-t from-black to-transparent pl-3 text-white">
              <Image
                src={getSanityImageURL(image?.team.image).url()}
                alt={image.team.name}
                width={10}
                height={10}
                class="mr-2 h-4 w-4 rounded-full border border-gray-200/60 "
              />
              <div class="items relative w-full flex text-xs uppercase leading-none">
                <p class=" team text-xs tracking-wide text-gray-200/60">
                  {image.team.name}
                </p>
              </div>
              <span class="absolute tracking-wide uppercase text-gray-400 bottom-2 right-3">
                {image._id}
              </span>
            </div>
          )}
        </div>
      ))
  }
</ul>

<style>
  h2 {
    font-family: 'Rajdhani', sans-serif;
    font-weight: 700;
  }
  p {
    font-family: 'Rajdhani', sans-serif;
    font-weight: 400;
  }

  .tag {
    font-family: 'Rajdhani', sans-serif;
    font-weight: 700;
    font-size: 8px;
  }

  .team {
    font-family: 'Rajdhani', sans-serif;
    font-weight: 600;
  }

  span {
    font-family: 'Rajdhani', sans-serif;
    font-weight: 400;
    font-size: 8px;
  }
</style>
