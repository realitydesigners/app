---
import '@fontsource/rajdhani/400.css'
import '@fontsource/rajdhani/600.css'
import '@fontsource/rajdhani/700.css'
import { Image } from 'astro:assets'
import { getSanityImageURL } from '../../utils/helpers.js'

const { article } = Astro.props
---

<ul class="w-full h-auto grid grid-cols-1 p-2 flex-wrap">
  {
    article &&
      article.map((article: any) => (
        <div class="text-white relative w-full border border-gray-200 rounded-xl">
          <div class="flex absolute right-3 top-3 w-full justify-end">
            <p class="tag tracking-wide uppercase text-purple-200 flex w-auto p-[.2em] pl-2 pr-2 text-xs rounded-2xl border border-purple-200 bg-pink-200/20 backdrop-blur-lg transition-all duration-300 ease-in hover:bg-purple-400 hover:border-purple-400 hover:text-white">
              Article
            </p>
          </div>
          {article?.image && (
            <Image
              src={getSanityImageURL(article?.image).url()}
              alt="this is an image"
              width={100}
              height={100}
              format="webp"
              class="w-full h-auto rounded-xl object-cover"
            />
          )}

          <h2 class="p-4 flex font-mono text-3xl uppercase leading-none text-white">
            {article.title}
          </h2>
          <p class="pl-4 pr-4  mb-4 tracking-wide text-lg leading-6 text-gray-400">
            {article.excerpt}
          </p>
          <a class="p-2" href={`/blog/${article.slug?.current}`}>
            <button class="read-button mb-4 ml-2  text-black bg-white text-sm pr-2 p-1 pl-3 rounded-full">
              Read â†’
            </button>
          </a>
        </div>
      ))
  }
</ul>

<style>
  h2 {
    font-family: 'Rajdhani', sans-serif;
    font-weight: 700;
  }
  p {
    font-family: 'Rajdhani', sans-serif;
    font-weight: 400;
  }

  .tag {
    font-family: 'Rajdhani', sans-serif;
    font-weight: 700;
    font-size: 8px;
  }
  .read-button {
    font-family: 'Rajdhani', sans-serif;
    font-weight: 700;
  }
</style>
