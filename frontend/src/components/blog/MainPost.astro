---
import { Image } from 'astro:assets'
import { getSanityImageURL } from '../../lib/helpers.js'

const { post } = Astro.props
---

{
  post && post.block && (
    <ul class="w-full lg:w-1/2 h-auto grid grid-cols-1 p-2 flex-wrap">
      <a href={`/posts/${post.slug?.current}`}>
        <div class="text-white p-2 w-full ">
          {post.image && (
            <div class="flex group overflow-hidden w-full mb-1 h-80 lg:h-96">
              <Image
                src={getSanityImageURL(post.image).url()}
                alt="Post image"
                width={1000}
                height={800}
                format="webp"
                class="object-cover transform transition-transform duration-300 w-full h-full group-hover:scale-105 "
              />
            </div>
          )}
          {post.subcategories
            ?.map((sub: { title: string }) => sub.title)
            .join(', ') && (
            <span class=" text-xs  mono tracking-wide  leading-tight uppercase  text-black">
              {post.subcategories
                .map((sub: { title: string }) => sub.title)
                .join(', ')}
            </span>
          )}
          <h2 class="pt-2  text-5xl uppercase leading-none text-black scramble-title">
            {post.title}
          </h2>
          <p class="pt-2 mono text-lg leading-tight text-gray-700 ">
            {post.excerpt}
          </p>
          <div class="w-full pt-4 flex justify-between">
            {post.block[0]?.team?.name && (
              <span class="mono text-xs tracking-wide uppercase leading-tight text-black">
                {post.block[0].team.name}
              </span>
            )}
            {post.block?.[0]?.publicationDate && (
              <span class="mono text-xs tracking-wide uppercase leading-tight text-black">
                {new Date(post.block[0].publicationDate).toLocaleDateString()}
              </span>
            )}
          </div>
        </div>
      </a>
    </ul>
  )
}

<style>
  h2 {
    font-family: 'Rajdhani', sans-serif;
    font-weight: 700;
  }
  p {
    font-family: 'Rajdhani', sans-serif;
    font-weight: 500;
  }

  .mono {
    font-family: 'JetBrains Mono Variable', sans-serif;
  }
</style>
