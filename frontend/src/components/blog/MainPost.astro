---
import { Image } from 'astro:assets'
import { getSanityImageURL } from '../../lib/helpers.js'

const { post } = Astro.props
---

<ul class="w-full lg:w-1/2 h-auto grid grid-cols-1 p-2 flex-wrap">
  {
    post && (
      <a href={`/posts/${post.slug?.current}`}>
        <div class="text-white p-2 w-full ">
          {post?.image && (
            <div class=" flex group overflow-hidden w-full h-72 lg:h-96">
              <Image
                src={getSanityImageURL(post?.image).url()}
                alt="this is an image"
                width={1000}
                height={800}
                format="webp"
                class="object-cover transform transition-transform duration-300 w-full h-full group-hover:scale-105 "
              />
            </div>
          )}

          <h2 class="p-2 pt-4 font-mono text-4xl uppercase leading-none text-black scramble-title">
            {post.title}
          </h2>
          <p class="p-2 font-mono text-lg leading-tight text-gray-700 ">
            {post.excerpt}
          </p>
        </div>
      </a>
    )
  }
</ul>

<style>
  h2 {
    font-family: 'Rajdhani', sans-serif;
    font-weight: 700;
  }
  p {
    font-family: 'Rajdhani', sans-serif;
    font-weight: 500;
  }
</style>
