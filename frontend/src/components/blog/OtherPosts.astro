---
import '@fontsource/rajdhani/500.css'
import '@fontsource/rajdhani/700.css'
import { Image } from 'astro:assets'
import Team from '../../pages/team.astro'
import { getSanityImageURL } from '../../utils/helpers.js'

const { posts } = Astro.props
---

<ul class="w-full lg:w-1/2 h-auto grid grid-cols-1 gap-2 p-2 flex-wrap">
  {
    posts &&
      posts.map((post: any) => (
        <a href={`/posts/${post.slug?.current}`}>
          <div class="flex flex-cols  p-2 w-full border-b-2 mb-2 border-gray-400/20">
            {post?.image && (
              <Image
                src={getSanityImageURL(post?.image).url()}
                alt="this"
                width={1000}
                height={1000}
                class="w-1/3 h-28 object-cover"
                format="webp"
              />
            )}

            <div class="pl-4 w-2/3 mb-2">
              <h2 class="mb-2 text-xl leading-tight font-bold  uppercase text-black">
                {post.title}
              </h2>
              <p class="excerpt-clamp text-md leading-tight tracking-wide text-black">
                {post.excerpt}
              </p>
            </div>
          </div>
        </a>
      ))
  }
</ul>

<style>
  h2 {
    font-family: 'Rajdhani', sans-serif;
    font-weight: 700;
  }
  p {
    font-family: 'Rajdhani', sans-serif;
    font-weight: 500;
  }
  .excerpt-clamp {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;

    max-height: 4.5em;
  }
</style>
