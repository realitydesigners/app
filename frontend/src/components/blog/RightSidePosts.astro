---
import { Image } from 'astro:assets'
import { getSanityImageURL } from '../../utils/helpers.js'

const { posts } = Astro.props
---

<div class="w-full lg:w-1/4">
  <ul class="w-full h-auto grid grid-cols-1 gap-2 p-2 flex-wrap">
    {
      posts &&
        posts.map((post: any) => (
          <a href={`/posts/${post.slug?.current}`}>
            <div class="flex flex-cols p-2 w-full border-b-2 mb-2 border-gray-300">
              {post?.image && (
                <div class="flex group overflow-hidden w-1/3 h-24">
                  <Image
                    src={getSanityImageURL(post?.image).url()}
                    alt="this"
                    width={1000}
                    height={1000}
                    format="webp"
                    class="object-cover transform transition-transform duration-300 w-full h-full group-hover:scale-105"
                  />
                </div>
              )}

              <div class="pl-4 w-2/3 mb-2">
                <h2 class="mb-2 text-xl leading-none uppercase text-black">
                  {post.title}
                </h2>
              </div>
            </div>
          </a>
        ))
    }
  </ul>
</div>

<style>
  h2 {
    font-family: 'Rajdhani', sans-serif;
    font-weight: 700;
  }
  p {
    font-family: 'Rajdhani', sans-serif;
    font-weight: 500;
  }
  .excerpt-clamp {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;

    max-height: 4.5em;
  }
</style>
