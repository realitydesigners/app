---
import '@fontsource/rajdhani/400.css'
import '@fontsource/rajdhani/600.css'
import { Image } from 'astro:assets'
import { getSanityImageURL } from '../../utils/helpers.js'

const { posts } = Astro.props
---

<div class="w-full lg:w-1/4">
  <ul class="w-full h-auto grid grid-cols-1 gap-2 p-2 flex-wrap">
    {
      posts &&
        posts.map((post: any) => (
          <a href={`/posts/${post.slug?.current}`}>
            <div class="flex flex-cols text-white p-4 w-full border-b-2 mb-2 border-gray-200/20">
              {post?.lightLayout?.image && (
                <Image
                  src={getSanityImageURL(post?.lightLayout?.image).url()}
                  alt="this"
                  width={1000}
                  height={1000}
                  class="w-1/2 h-60 object-cover"
                  format="webp"
                />
              )}
              {post?.darkLayout?.image && (
                <Image
                  src={getSanityImageURL(post?.darkLayout?.image).url()}
                  alt="this"
                  width={1000}
                  height={1000}
                  class="w-1/3 h-32 object-cover"
                  format="webp"
                />
              )}
              <div class="pl-4 w-2/3 mb-2">
                <h2 class="mb-2 text-xl leading-tight  uppercase text-white">
                  {post.title}
                </h2>
                <p class="excerpt-clamp text-md leading-tight tracking-wide text-gray-200/60">
                  {post.excerpt}
                </p>
              </div>
            </div>
          </a>
        ))
    }
  </ul>
</div>

<style>
  h2 {
    font-family: 'Rajdhani', sans-serif;
    font-weight: 600;
  }
  p {
    font-family: 'Rajdhani', sans-serif;
    font-weight: 400;
  }
  .excerpt-clamp {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;

    max-height: 4.5em;
  }
</style>
