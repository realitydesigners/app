---
import { Image } from 'astro:assets'
import { getSanityImageURL } from '../../lib/helpers.js'

const { posts } = Astro.props
---

<div class="w-full lg:w-1/4">
  <ul class="w-full h-auto grid grid-cols-1 gap-2 p-4 lg:p-2 flex-wrap">
    {
      posts &&
        posts.map((post: any) => (
          <a href={`/posts/${post.slug?.current}`}>
            <div class="flex flex-cols pt-2 pb-2 w-full border-b-2 mb-2 border-gray-300">
              <div class="pr-4 flex-cols w-3/4 ">
                <h2 class="text-xl   pt-1 leading-none  text-black">
                  {post.title}
                </h2>
                {post.block?.[0]?.publicationDate && (
                  <span class="mono text-xs tracking-wide uppercase leading-tight text-black">
                    {new Date(
                      post.block[0].publicationDate,
                    ).toLocaleDateString()}
                  </span>
                )}
              </div>
              {post?.image && (
                <div class="flex group overflow-hidden w-1/4 lg:w-1/3 h-20 sm:h-36 lg:h-20">
                  <Image
                    src={getSanityImageURL(post?.image).url()}
                    alt="this"
                    width={100}
                    height={100}
                    format="webp"
                    class="object-cover rounded-md transform transition-transform duration-300 w-full h-full group-hover:scale-105"
                  />
                </div>
              )}
            </div>
          </a>
        ))
    }
  </ul>
</div>

<style>
  h2 {
    font-family: 'Rajdhani', sans-serif;
    font-weight: 700;
  }
  p {
    font-family: 'Rajdhani', sans-serif;
    font-weight: 500;
  }
  .excerpt-clamp {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;

    max-height: 4.5em;
  }
  .mono {
    font-family: 'JetBrains Mono Variable', sans-serif;
  }

  span {
    line-height: 0em;
  }
</style>
