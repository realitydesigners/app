---
import { Image } from 'astro:assets'
import Discord from '../../../public/icons/Discord.svg'
import Instagram from '../../../public/icons/Instagram.svg'
import X from '../../../public/icons/X.svg'
import YouTube from '../../../public/icons/YouTube.svg'
import { getSanityImageURL } from '../../utils/helpers.js'

const { block } = Astro.props
---

<div class="w-full h-auto bg-gray-200 pt-8 pb-8 lg:pt-16 lg:pb-16">
  {
    block?._type === 'teamBlock' && (
      <div class="w-full flex justify-center">
        <div class="flex flex-col w-11/12 lg:w-1/3 bg-gray-300 mb-12  shadow-lg p-4 border border-gray-300 rounded-xl">
          <div class="flex items-center">
            <Image
              src={getSanityImageURL(block?.team.image).url()}
              alt="Team member image"
              width={10}
              height={10}
              format="webp"
              class="w-20 h-20 object-cover rounded-full shadow-2xl border-gray-300 border-2"
            />
            <div class="ml-4 flex flex-col">
              <p class="text-black uppercase leading-none font-bold font-mono tracking-wide text-lg">
                {block?.team.name}
              </p>
              <span class="text-black font-mono leading-none uppercase text-xs tracking-widest">
                {block?.team.role}
              </span>
            </div>
          </div>
          <p class="p-2 text-black text-sm font-mono mt-4">
            {block?.team.shortBio}
          </p>
          <div class="w-auto p-2 gap-6 justify-center flex items-center flex-wrap">
            <a href="https://discord.com/channels/825128650935631942/927340981169307698">
              <Image
                src={Discord}
                alt="Discord Icon"
                class="h-4 w-4 transition-transform transform hover:scale-110"
              />
            </a>

            <a href="https://twitter.com/realitydesignrs">
              <Image
                src={X}
                alt="X Icon"
                class="h-4 w-4 transition-transform transform hover:scale-110"
              />
            </a>

            <a href="https://www.youtube.com/@realitydesigners">
              <Image
                src={YouTube}
                alt="YouTube Icon"
                class="h-4 w-4 transition-transform transform hover:scale-110"
              />
            </a>
            <a href="https://www.instagram.com/realitydesigners.tv/">
              <Image
                src={Instagram}
                alt="Instagram Icon"
                class="h-4 w-4 transition-transform transform hover:scale-110"
              />
            </a>
          </div>
        </div>
      </div>
    )
  }
</div>
